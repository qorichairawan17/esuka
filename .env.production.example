# Production Environment Configuration for e-Suka
# Copy this file to .env for production deployment

# Application
APP_NAME="Elektronik Surat Kuasa (e-SuKa)"
APP_VERSION='2.0.0'
APP_AUTHOR='Pengadilan Negeri Lubuk Pakam'
APP_DESCRIPTION='Layanan Pendaftaran Surat Kuasa Elektronik. Mudah, Cepat, Biaya Ringan'
APP_KEYWORDS='E-Suka, Elektronik Surat Kuasa, Surat Kuasa, Pengadilan Negeri Lubuk Pakam. e-SuKa'
APP_DEVELOPER='Qori Chairawan | Pegawai Pemerintah Dengan Perjanjian Kerja'

APP_ENV=production
APP_KEY=
APP_PREVIOUS_KEYS=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://esuka.pn-lubukpakam.go.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=esuka_production
DB_USERNAME=esuka_user
DB_PASSWORD=your_secure_password_here

# Cache & Session (IMPORTANT: Use Redis for better performance)
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue (Use Redis for better performance)
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Broadcast
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Memcached (if using)
MEMCACHED_HOST=127.0.0.1

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@pn-lubukpakam.go.id"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if using S3 for storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# Google OAuth (Laravel Socialite)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Optimization Settings
VIEW_CACHE_ENABLED=true
ROUTE_CACHE_ENABLED=true
CONFIG_CACHE_ENABLED=true
EVENT_CACHE_ENABLED=true

# Image Optimization
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# Security
SECURE_COOKIES=true
SANCTUM_STATEFUL_DOMAINS=esuka.pn-lubukpakam.go.id

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60
RATE_LIMIT_GLOBAL=1000
